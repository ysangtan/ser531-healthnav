# Production Configuration Template
# Copy this to .env for production deployment

# Application Settings
APP_NAME="Healthcare Navigator API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# API Configuration
API_V1_STR="/api/v1"
CORS_ORIGINS=["https://your-frontend-domain.com"]

# GraphDB Configuration - PRODUCTION (Update with your hosted GraphDB)
# Example: GraphDB Cloud, AWS EC2, Azure VM, etc.
GRAPHDB_URL=https://your-graphdb-host.com:7200
GRAPHDB_REPOSITORY=healthnav
GRAPHDB_USERNAME=your-username
GRAPHDB_PASSWORD=your-password

# MongoDB Configuration - PRODUCTION (Update with your hosted MongoDB)
# Example: MongoDB Atlas, AWS DocumentDB, etc.
MONGODB_URL=mongodb+srv://username:password@your-cluster.mongodb.net/
MONGODB_DB_NAME=healthnav
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Data Configuration
DEFAULT_RADIUS_MILES=25
MAX_RADIUS_MILES=100
DEFAULT_LAT=33.4484
DEFAULT_LNG=-112.0740

# Feature Flags
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300
